{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "types": ["vite/client"],
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.vue", "src/vue-shim.d.ts"],
    "exclude": ["node_modules", "dist"]
  }
  